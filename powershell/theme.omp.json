{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#00B0FF",
          "foreground": "#FFF",
          "properties": {
            "postfix": " "
          },
          "style": "plain",
          "type": "os"
        },
        {
          "background": "#00B0FF",
          "foreground": "#FFF",
          "style": "plain",
          "type": "root"
        },
        {
          "background": "#00B0FF",
          "foreground": "#FFF",
          "properties": {
            "postfix": " ",
            "style": "full"
          },
          "style": "plain",
          "type": "path"
        },
        {
          "background": "#00ff9c",
          "foreground": "#000",
          "properties": {},
          "style": "plain",
          "type": "git"
        },
        {
          "background": "transparent",
          "foreground": "#00ff9c",
          "properties": {
            "postfix": "",
            "prefix": "",
            "text": ""
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#00ff9c",
          "foreground": "#000",
          "leading_diamond": "",
          "properties": {
            "postfix": " <#000></> "
          },
          "style": "diamond",
          "type": "session"
        },
        {
          "background": "#00ff9c",
          "foreground": "#000",
          "properties": {
            "postfix": "  ",
            "time_format": "15:04:05"
          },
          "style": "plain",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFF",
          "properties": {
            "always_enabled": true,
            "display_exit_code": false,
            "error_color": "#FF5252",
            "prefix": "❯"
          },
          "style": "plain",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ]
}
